<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Le ciné wild, retrouvé tous vos films.">
    <meta name="author" content="Duriez Ludovic">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="{{ asset('css/images/cinewild.png') }}"/>

    <title>{% block title %}Ciné-Wild{% endblock %}</title>

    {% block stylesheets %}

        <!-- Fonts -->
        <link rel="stylesheet" href="{{ asset('fonts/css/fontawesome-all.min.css') }}">
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:200,200i,300,300i,400,400i,600,600i,700,700i,900,900i"
              rel="stylesheet">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/bootstrap-select.min.css') }}">

        <!-- jQuery -->
        <script src="{{ asset('js/jquery.js') }}"></script>

    {% endblock %}
</head>
<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">

{% block nav %}
{% endblock nav %}

{% block container %}

    {% block headerPicture %}
    {% endblock headerPicture %}

{% endblock container %}

{% block footer %}
{% endblock footer %}

{% block javascripts %}

    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset('js/bootstrap.js') }}"></script>

    <!-- Scrolling Nav JavaScript -->
    <script src="{{ asset('js/jquery.js') }}"></script>
    <script src="{{ asset('js/scrolling-nav.js') }}"></script>

{% endblock javascripts %}

</body>
</html>